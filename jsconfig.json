{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@assets": ["assets/*"],
      "@atoms": ["components/atoms/*"],
      "@molecules": ["components/molecules/*"],
      "@organisms": ["components/organisms/*"],
      "@pages": ["pages/*"],
      "@templates": ["templates/*"],
      "@testHelpers": ["utils/testHelpers/*"],
      "@utils": ["utils/*"]
    }
  },
  "include": ["src/**"],
  "exclude": ["node_modules", "yarn.lock"]
}